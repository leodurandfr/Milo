# Milo Client Avahi Configuration
# Publishes on active network interface (eth0 preferred, wlan0 as fallback)
# Variables: __ALLOW_IFACE__ and __DENY_IFACES__ are replaced at install time

[server]
allow-interfaces=__ALLOW_IFACE__
deny-interfaces=__DENY_IFACES__
use-ipv4=yes
use-ipv6=yes
ratelimit-interval-usec=1000000
ratelimit-burst=1000

[wide-area]
enable-wide-area=yes

[publish]
publish-workstation=yes
publish-hinfo=no
publish-domain=yes

[reflector]
enable-reflector=no

